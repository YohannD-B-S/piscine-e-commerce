{% extends 'admin/base.html.twig' %}

{% block main %}
    <main class="main-content">
        <h1 class="form-title">Modifier un produit</h1>

        <form method="POST" class="product-form">
            <label for="title" class="form-label">Titre :
                <input type="text" name="title" value="{{ product.title }}" class="form-input">
            </label>

            <label for="description" class="form-label">Description :
                <input type="text" name="description" value="{{ product.description }}" class="form-input">
            </label>

            <label for="price" class="form-label">Prix :
                <input type="number" name="price" value="{{ product.price }}" class="form-input">
            </label>

            <label for="is-published" class="form-label">Publié ?
                <input type="checkbox" name="is-published" class="form-checkbox" {% if product.isPublished %} checked {% endif %}>
            </label>

            <label for="category-id" class="form-label">Catégorie :
                <select name="category-id" class="form-select">
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if category.id == product.category.id %}selected{% endif %}>
                            {{ category.title }}
                        </option>
                    {% endfor %}
                </select>
            </label>

                    <button type="submit" class="form-button">Modifier le produit le produit</button>

        </form>
    </main>

{% endblock %}

           